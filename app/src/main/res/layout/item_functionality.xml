<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="160dp"
    android:layout_width="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp"
    android:layout_marginStart="@dimen/content_margin_normal"
    android:layout_marginTop="@dimen/content_margin_large"
    android:background="@color/colorAccent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            tools:src="@drawable/ic_power_settings_new_black_24dp"/>

        <TextView
            android:id="@+id/tvFunctionality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_normal"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="Turn on"/>

        <View
            android:id="@+id/vSet"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/content_margin_large"
            android:background="@drawable/shape_red_set_background"/>
    </LinearLayout>
</android.support.v7.widget.CardView>